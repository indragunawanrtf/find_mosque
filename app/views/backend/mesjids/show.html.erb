<div class="box box-danger">
  <div class="box-header">
    <i class="ion ion-clipboard"></i>
    <h2 class="box-title"><%= @mesjid.name %></h2>
    <div class="pull-right">
      <%= link_to "Edit", edit_backend_mesjid_path(@mesjid), class: 'btn btn-success' %>
      <%= link_to "Delete", backend_mesjid_path(@mesjid), method: :delete, data: {confirm: "Are You Sure Delete?"}, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="box-body">
    <ul class="todo-list ui-sortable-handle">
      <th>
        Description
      </th>
      <li><%= @mesjid.description %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Jenis
      </th>
      <li><%= @mesjid.jenis %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Address
      </th>
      <li><%= @mesjid.address %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Kecamatan
      </th>
      <li><%= @mesjid.kecamatan %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Kota
      </th>
      <li><%= @mesjid.kota %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Province
      </th>
      <li><%= @mesjid.province.name %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Tahun Berdiri
      </th>
      <li><%= @mesjid.tahun_berdiri %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Status Tanah
      </th>
      <li><%= @mesjid.status_tanah %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Open Time
      </th>
      <li><%= @mesjid.open_time.try(:strftime, '%H:%M') %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Close Time
      </th>
      <li><%= @mesjid.close_time.try(:strftime, '%H:%M') %></li>
    </ul>
    <div class="box-body">
      <h3>Pictures</h3>
      <ul class="todo-list ui-sortable-handle">
        <% @assets.each do |asset| %>
          <li><%= image_tag asset.picture_url %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
