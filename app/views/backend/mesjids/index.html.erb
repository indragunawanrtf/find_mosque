<div class="box">
  <div class="box-header">
      <h3 class="box-title">Data Table Masjid</h3>
  </div>
  <div class="box-body">
    <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
      <div class="row">
        <div class="col-sm-6">
          <div id="examaple1_length" class="dataTables_length">
            <label>
              Show
              <select class="form-control input-sm" name="example1_length" aria-controls="example1">
                <option value="10">10</option>
                <option value="10">25</option>
                <option value="10">50</option>
                <option value="10">100</option>
                <option value="10">150</option>
                <option value="10">200</option>
              </select>
              Entries
            </label>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="example1_filter" class="dataTables_filter">
            <label>
              Search:
              <input class="form-control input-sm" placeholder="" aria-controls="example1" type="search">
            </label>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
              <tr role="row">
                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 176.35px;"
                aria-sort="ascending" aria-label="Rendering: activate to sort column descending">
                  Nama
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 224.7px;"
                aria-label="Alamat: activate to sort column descending">
                  Jenis
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 191px;"
                aria-label="Kota: activate to sort column descending">
                  Kota
                </th>
                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" style="width: 151.45px;"
                aria-label="Provinsi: activate to sort column descending">
                  Provinsi
                </th>
              </tr>
            </thead>
            <tbody>
              <% @mesjids.each do |mesjid| %>
                <tr class="odd" role="row">
                  <td class="sorting_1"><%= mesjid.name %></td>
                  <td><%= mesjid.jenis %></td>
                  <td><%= mesjid.kota %></td>
                  <td><%= mesjid.province.name %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th rowspan="1" colspan="1">Nama</th>
                <th rowspan="1" colspan="1">Alamat</th>
                <th rowspan="1" colspan="1">Kota</th>
                <th rowspan="1" colspan="1">Provinsi</th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>

      <div class="row">
        <%= paginate @mesjids %>
      </div>

    </div>
  </div>
</div>
