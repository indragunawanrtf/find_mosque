<div class="box box-danger">
  <div class="box-header">
    <i class="ion ion-clipboard"></i>
    <h2 class="box-title"><%= @kajian.name %></h2>
    <div class="pull-right">
      <%= link_to "Edit", edit_backend_kajian_path(@kajian), class: 'btn btn-success' %>
      <%= link_to "Delete", backend_kajian_path(@kajian), method: :delete, data: {confirm: "Are You Sure Delete?"}, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="box-body">
    <ul class="todo-list ui-sortable-handle">
      <th>
        Description
      </th>
      <li><%= @kajian.description %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Masjid ID
      </th>
      <li><%= @kajian.mesjid_id %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Ustadz ID
      </th>
      <li><%= @kajian.ustad_id %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        Start At
      </th>
      <li><%= @kajian.start_at %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        End At
      </th>
      <li><%= @kajian.end_at %></li>
    </ul>
    <ul class="todo-list ui-sortable-handle">
      <th>
        User ID
      </th>
      <li><%= @kajian.user_id %></li>
    </ul>
  </div>
</div>
